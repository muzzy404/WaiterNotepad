<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@id/card_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OrderCardViewStyle">

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@id/order_card_title"
                    android:text="Order 325"
                    style="@style/CardTitleStyle"/>
                <TextView
                    android:id="@id/order_card_description"
                    android:text="very long description of order (by waiter)"
                    style="@style/CardDescriptionStyle"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@id/order_card_table"
                    android:drawableTop="@drawable/ic_order_white_48dp"
                    android:layout_gravity="center"
                    android:text="Table 5"
                    style="@style/CardDescriptionStyle" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>