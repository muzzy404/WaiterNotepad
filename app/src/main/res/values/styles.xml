<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Order card style -->
    <style name="OrderCardViewStyle" parent="Theme.AppCompat">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>

        <item name="contentPaddingBottom">@dimen/card_content_padding_vertical</item>
        <item name="contentPaddingTop">@dimen/card_content_padding_vertical</item>
        <item name="contentPaddingLeft">@dimen/card_content_padding_horizontal</item>
        <item name="contentPaddingRight">@dimen/card_content_padding_horizontal</item>

        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_padding_horizontal</item>

        <item name="cardBackgroundColor">@color/colorCardPurple</item>
    </style>

    <!-- Card title style -->
    <style name="CardTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:paddingBottom">@dimen/card_title_bottom_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Card orderDescription style -->
    <style name="CardDescriptionStyle">
        <item name="android:textSize">@dimen/card_description_text_size</item>
        <item name="android:textColor">@color/colorCardDescription</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>

        <item name="itemIconTint">@color/btm_nav_item_selected</item>
        <item name="itemTextColor">@color/btm_nav_item_selected</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

</resources>
